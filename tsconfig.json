{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": [
    "src/main-simple.ts",
    "src/clipboard-manager.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "system-agent",
    "src/main.ts",
    "src/spell-runner.ts",
    "src/runtime-manager.ts",
    "src/provider-manager.ts",
    "src/system-agent-client.ts"
  ]
} 